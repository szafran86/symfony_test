{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}


    <div class="card-deck mb-3">
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Customer: <b>{{ customer.name }}  {{ customer.surname }}</b></h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ customer.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ customer.name }}</td>
                        </tr>
                        <tr>
                            <th>Surname</th>
                            <td>{{ customer.surname }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ customer.email }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ customer.phone }}</td>
                        </tr>
                        <tr>
                            <th>Customer_type</th>
                            <td>{{ customer.customerType }}</td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
                        
    <div class="row">
        <div class="col-sm-4">
            <a class="btn btn-primary" href="{{ path('customer_edit', {'id': customer.id}) }}">Edit</a>
        </div>
        <div class="col-sm-4 text-center">
            {{ include('customer/_delete_form.html.twig') }}
        </div>
        <div class="col-sm-4 text-right">
            <a class="btn btn-primary" href="{{ path('customer_index') }}">Back to list</a>
        </div>
    </div>



    
    

    

    
{% endblock %}
