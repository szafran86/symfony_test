<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Customer_type</th>
            <th class="text-right">actions</th>
        </tr>
    </thead>
    <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.name }}</td>
                <td>{{ customer.surname }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.customerType }}</td>
                <td class="text-right">
                    <a class="btn btn-light" href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a class="btn btn-light" href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No customers found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>